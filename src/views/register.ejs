<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Sign Up</h2>
                <form class="login-form" action="/auth/OTP" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Username</label>
                        <input type="text" class="form-control" placeholder="" name="username" required>

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" placeholder="" name="password" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Confirm Password</label>
                        <input type="password" class="form-control" placeholder="" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Gmail</label>
                        <input type="email" class="form-control" placeholder="" name="email" required>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="recruiter">
                        <label class="form-check-label" for="inlineRadio1">Recruiter</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="role" id="inlineRadio2" value="user">
                        <label class="form-check-label" for="inlineRadio2">User</label>
                    </div>
                    <p style="color: red" id="notice" ><%- notice %></p>
                    <div class="form-check">
                        <button type="submit" class="btn btn-login float-right">Register</button>
                    </div>


                </form>


                <p class="text-inverse text-center">Already registered ? <a href="http://localhost:3000/auth/login"
                                                                                data-abc="true">Login</a></p>
