<%- include('./partials/header.ejs', {user:user}) -%>
<div class="container">
    <form action="/cv/send" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="formGroupExampleInput">Avatar</label>
            <input type="file"  name="image" id="formGroupExampleInput" placeholder="Avatar">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Name</label>
            <input type="text" class="form-control" name="cvName" placeholder="Company" id="cvName">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Job</label>
            <input type="text" class="form-control" name="job" id="formGroupExampleInput2" placeholder="Job">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Salary</label>
            <input type="number" class="form-control" name="salary" id="formGroupExampleInput2" placeholder="Salary">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Location</label>
            <input type="text" class="form-control" name="location" id="formGroupExampleInput2" placeholder="Location">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Description</label>
            <input type="text" class="form-control" name="desc" id="formGroupExampleInput2" placeholder="Description">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Duration</label>
            <input type="text" class="form-control" name="duration" id="formGroupExampleInput2" placeholder="Duration">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Category</label>
            <input type="text" class="form-control" name="category" id="formGroupExampleInput2" placeholder="Category">
        </div>
        <button type="submit" class="btn btn-primary mb-3" id="send">Submit</button>
    </form>
</div>
<%- include('./partials/footer.ejs') -%>
<script src="../public/js/script.js"></script>
<script src="https://cdn.socket.io/4.5.0/socket.io.min.js" crossorigin="anonymous"></script>

